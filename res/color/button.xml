<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:color="@color/red300">
        <shape>

            <solid android:color="@color/red300"/>
            <corners android:radius="7dp"/>
            <padding
                android:left="10dp"
                android:right="10dp"/>

        </shape>
    </item>

    <item android:state_pressed="true" android:color="@color/red300">
        <shape>

            <solid android:color="@color/red300shades"/>
            <corners android:radius="7dp"/>
            <padding
                android:left="10dp"
                android:right="10dp"/>
            <stroke android:width="2dp" android:color="@color/red300shades_2"/>

        </shape>
    </item>

</selector>